body{
	font-family: 'Oswald', sans-serif;
}

.topo{
  align-items: center;
  justify-content: center;
  text-align: center; 
  flex-direction: column;
	figure{
		img{
			margin: 0 auto;
			max-width: 100%;
		}
	}
	.description{
		background: #094E85;
  	margin: 60px 0;
  	padding: 50px 0;
  	border-bottom: 1px solid #87A5BD;
  	border-top: 1px solid #0C4E82;
		h1{
			width: 60%;
			color: #FFFEFB;
			text-transform: uppercase;
			line-height: 1.5;
			margin: 0 auto;
			font-weight: 500;
			font-size: 35px;
		}
	}
}

section{
	text-align: center;	
	h1{
		text-transform: uppercase;
		font-size: 50px;
		color: #020202;
	}
}

.sobre{
	h1{
		margin-bottom: 30px;
	}
	ul{	
		width: 94%; 
		li{
			display: inline-flex;
			width: 33.3%;
			margin: 0 auto;
			figure{
				img{
					width: 120px;
					max-width: 100%;
				}
				figcaption{
					p{
						color: #0B4E83;
						tex-shadow: 1px 1px #034E88;
						font-size: 28px;
						text-transform: uppercase;
					}
				}
			}
		}
	}
	ul.first{
		li{
			display: inline-block;
		}
	}
}

.resultado{
	ul{
		margin: 50px auto;
		display: inline-flex;
		
		li{
			display: inline-block;
			width: 300px;
			height: 300px;
			border: 1px solid #FFE29B;
			background: #FBB03B;
			border-radius: 50%;
			margin: 0 18px;
			
			span{
				font-size: 80px;
				display: block;
				padding-top: 30px;
				font-weight: bold;
				color: #094E85;
			}
			
			p{
				font-size: 28px;
				text-transform: uppercase;
				margin: 0 auto;
				padding: 0 26px;
				color: #074C83;
			}
		}
		

	}
}

@media (max-width: 800px) {
	.sobre{
		ul{
			width: auto;
			padding-left: 0;
			li{
				display: table;
				width: auto;
			}
		}
	}
}
